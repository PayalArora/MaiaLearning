<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/white_rect"
    android:padding="@dimen/_10dp"
    android:layout_marginRight="@dimen/_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/note"
        android:layout_width="@dimen/_35dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/white_rect"
        android:backgroundTint="@color/yellow1"
       app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_not"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="@dimen/_35dp"/>
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:maxWidth="@dimen/_200dp"
        android:lineSpacingExtra="@dimen/_2sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/menu"
        app:layout_constraintStart_toEndOf="@+id/note"
        android:paddingLeft="@dimen/_15dp"
        android:textStyle="bold"
android:layout_marginHorizontal="@dimen/_10dp"
        android:text="Assignment Making\nHabits Stick"
        android:textColor="@color/black_1"
        android:textSize="@dimen/_16sp"
        />
    <ImageButton
        android:id="@+id/menu"
        android:layout_width="@dimen/_10dp"
        android:layout_marginStart="@dimen/_10dp"
        app:layout_constraintBottom_toBottomOf="@id/text_title"
        app:layout_constraintTop_toTopOf="@id/text_title"
        android:paddingRight="@dimen/_5dp"
        app:layout_constraintStart_toEndOf="@+id/text_title"
        android:background="@android:color/transparent"
        android:src="@drawable/menu_dots"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="@dimen/_30dp"
        app:layout_constraintBottom_toBottomOf="@id/text_title"
        android:layout_marginStart="@dimen/_5dp"
        android:padding="@dimen/_5dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/text_title"
        app:layout_constraintStart_toEndOf="@+id/text_title"
        android:background="@drawable/ic_delete"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="@dimen/_30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>