<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_top_curve_white_filled_with_border"
    android:paddingTop="@dimen/_15dp"
    android:backgroundTint="@color/white_1"
    android:paddingBottom="@dimen/_20dp"
   >

    <TextView
        android:id="@+id/text_carr"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30dp"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/_5dp"
        android:drawableStart="@drawable/career"
        android:drawablePadding="@dimen/_5dp"
        android:drawableTint="@color/blue_2"
        android:fontFamily="@font/inter_bold"
        android:paddingStart="@dimen/_10dp"
        android:text="@string/career"
        android:textColor="@color/blue_2"
        android:textSize="@dimen/_14sp" />

    <TextView
        android:id="@+id/text_submitted"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30dp"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/_5dp"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_toRightOf="@+id/text_carr"
        android:background="@drawable/dashboard_rounded_icon"
        android:backgroundTint="@color/green_1"
        android:drawableStart="@drawable/arrow_up"
        android:drawablePadding="@dimen/_5dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="center_vertical"
        android:padding="@dimen/_5dp"
        android:text="@string/submitted"
        android:textColor="@color/green_1"
        android:textSize="@dimen/_12sp" />

    <RelativeLayout
        android:id="@+id/close"
        android:layout_width="25dp"
        android:layout_height="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="@dimen/_15dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@drawable/circle_lay">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/cross" />
    </RelativeLayout>


    <TextView
        android:id="@+id/task_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_carr"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/_10dp"
        android:fontFamily="@font/inter_bold"
        android:paddingStart="@dimen/_15dp"
        android:text="@string/task_headline"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sp" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_below="@+id/task_headline"
        android:background="@color/divider_color_1" />

    <TextView
        android:id="@+id/sub_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginHorizontal="@dimen/_15dp"
        android:layout_marginTop="@dimen/_10dp"
        android:fontFamily="@font/inter"
        android:lineSpacingExtra="@dimen/_2sp"
        android:text="@string/review_your"
        android:textColor="@color/univ_name"
        android:textSize="@dimen/_14sp" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_below="@+id/sub_description"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@color/divider_color_1" />


    <TextView
        android:id="@+id/time_join_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        android:layout_gravity="end"
        android:layout_marginHorizontal="@dimen/_15dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@drawable/white_rounded"
        android:backgroundTint="@color/grey_1"
        android:fontFamily="@font/inter"
        android:lineSpacingExtra="@dimen/_2sp"
        android:padding="@dimen/_5dp"
        android:text="25 Jan 2022"
        android:textColor="@color/grey"
        android:textSize="@dimen/_14sp" />

    <ImageView
        android:id="@+id/tic"
        android:layout_width="@dimen/_25dp"
        android:layout_height="@dimen/_25dp"
        android:layout_below="@+id/view3"
        android:layout_gravity="end"
        android:layout_marginHorizontal="@dimen/_15dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_toRightOf="@+id/time_join_text"
        android:background="@drawable/white_rounded"
        android:backgroundTint="@color/alpha_blue_t"
        android:fontFamily="@font/inter_bold"
        android:lineSpacingExtra="@dimen/_2sp"
        android:padding="@dimen/_5dp"
        android:src="@drawable/green_tick"
        android:textSize="@dimen/_14sp" />

    <TextView
        android:id="@+id/completed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        android:layout_gravity="end"
        android:layout_marginHorizontal="@dimen/_5dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_toRightOf="@+id/tic"
        android:fontFamily="@font/inter_bold"
        android:lineSpacingExtra="@dimen/_2sp"
        android:padding="@dimen/_5dp"
        android:text="@string/completed"
        android:textColor="@color/green_1"
        android:textSize="@dimen/_14sp" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_below="@+id/time_join_text"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@color/divider_color_1" />

    <RelativeLayout
        android:id="@+id/choose_file"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80dp"
        android:layout_below="@+id/view5"
        android:layout_margin="@dimen/_10dp"
        android:background="@drawable/rounded_dashed">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/_15dp"
            android:layout_marginTop="@dimen/_10dp"
            android:fontFamily="@font/inter_bold"
            android:lineSpacingExtra="@dimen/_2sp"
            android:padding="@dimen/_5dp"
            android:text="@string/choose_file"
            android:textColor="@color/grey"
            android:textSize="@dimen/_14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_below="@+id/choose_file"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@color/divider_color_1" />

    <TextView
        android:id="@+id/attach_files"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view6"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/_10dp"
        android:fontFamily="@font/inter_bold"
        android:paddingStart="@dimen/_10dp"
        android:text="@string/attached_files"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/attach_list"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attach_files"
        android:background="@color/white_1" />

    <TextView
        android:id="@+id/worksheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal= "true"
        android:visibility="gone"
        android:layout_gravity="end"
        android:layout_marginHorizontal="@dimen/_15dp"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginBottom="@dimen/_25dp"
        android:background="@drawable/white_rounded"
        android:backgroundTint="@color/alpha_blue_t"
        android:drawableEnd="@drawable/ic_download"
        android:drawablePadding="@dimen/_10dp"
        android:fontFamily="@font/inter"
        android:lineSpacingExtra="@dimen/_2sp"
        android:paddingVertical="@dimen/_10dp"
        android:paddingHorizontal="@dimen/_10dp"
        android:text="@string/worksheet"
        android:textColor="@color/blue"
        android:textSize="@dimen/_14sp" />

    <Button
        android:id="@+id/complete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_20dp"
        android:background="@drawable/white_rect"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/inter"
        android:text="@string/complete"
        android:textAllCaps="false"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/write_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/write"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/_15dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_25dp"
            android:layout_weight="1"
            android:background="@drawable/white_rounded"
            android:backgroundTint="@color/alpha_blue_t"
            android:drawablePadding="@dimen/_10dp"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/_2sp"
            android:paddingHorizontal="@dimen/_5dp"
            android:paddingVertical="@dimen/_10dp"
            android:text="@string/write"
            android:textColor="@color/blue"
            android:textSize="@dimen/_14sp" />

        <TextView
            android:id="@+id/reset_comp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/_15dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_25dp"
            android:layout_weight="1"
            android:background="@drawable/white_rounded"
            android:backgroundTint="@color/alpha_blue_t"
            android:drawablePadding="@dimen/_10dp"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/_2sp"
            android:paddingHorizontal="@dimen/_5dp"
            android:paddingVertical="@dimen/_10dp"
            android:text="@string/reset_Comp"
            android:textColor="@color/blue"
            android:textSize="@dimen/_14sp" />

    </LinearLayout>

</RelativeLayout>
