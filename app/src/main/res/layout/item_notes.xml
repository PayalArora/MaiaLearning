<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_15dp"
    android:id="@+id/detail"
    android:layout_margin="@dimen/_10dp"
    android:background="@drawable/white_rect"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:lineSpacingExtra="@dimen/_2sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/assignment_"
        android:textColor="@color/black_1"
        android:textSize="@dimen/_16sp"
        />
    <ImageButton
        android:layout_width="@dimen/_10dp"
        android:layout_marginTop="@dimen/_15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        android:background="@android:color/transparent"
        android:src="@drawable/menu_dots"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5dp"
        android:lineSpacingExtra="@dimen/_2sp"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_1"
        android:textSize="@dimen/_11sp"
        />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:background="@color/grey_1"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_description"
        android:layout_height="@dimen/_05dp" />
    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:textColor="@color/black_1"
        android:layout_marginVertical="@dimen/_10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/_12sp"
        android:text="14 May 2021 Choudhary, Paul"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/comment_list"
        android:layout_width="@dimen/_30dp"
        android:layout_marginTop="@dimen/_12dp"
        android:padding="@dimen/_5dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_message"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="@dimen/_30dp"/>
    <TextView
        android:layout_width="@dimen/_10dp"
        android:layout_height="@dimen/_10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:gravity="center"
        android:text="2"
        android:background="@drawable/black_circle"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_13dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/_7sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>