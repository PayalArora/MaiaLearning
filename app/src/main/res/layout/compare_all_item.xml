<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_5dp"
    android:layout_marginStart="@dimen/_10dp"
    android:layout_marginEnd="@dimen/_10dp"
    app:cardCornerRadius="@dimen/_10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/labeled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_5dp"
        android:paddingBottom="@dimen/_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:fontFamily="@font/inter_bold"
            android:paddingTop="@dimen/_5dp"
            android:paddingEnd="@dimen/_8dp"
            android:paddingBottom="@dimen/_5dp"
            android:textColor="@color/grey"
            android:textSize="@dimen/_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/grey_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_weight="1"
                android:background="@drawable/white_rect_15"
                android:backgroundTint="@color/grey_1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_5dp"
                android:paddingEnd="@dimen/_5dp">

                <TextView
                    android:id="@+id/wgpa_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="--"
                    android:textSize="@dimen/_12sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/wgpa_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wgpa_value"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="WGPA"
                    android:textSize="@dimen/_12sp"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_weight="1"
                android:background="@drawable/white_rect_15"
                android:backgroundTint="@color/grey_1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_5dp"
                android:paddingEnd="@dimen/_5dp">

                <TextView
                    android:id="@+id/sat_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="--"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_12sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/sat_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sat_value"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="@string/sat_"
                    android:textSize="@dimen/_12sp"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_weight="1"
                android:background="@drawable/white_rect_15"
                android:backgroundTint="@color/grey_1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_5dp"
                android:paddingEnd="@dimen/_5dp">

                <TextView
                    android:id="@+id/act_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="--"
                    android:textColor="@color/green_1"
                    android:textSize="@dimen/_12sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/act_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/act_value"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="@string/act"
                    android:textSize="@dimen/_12sp"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_weight="1"
                android:background="@drawable/white_rect_15"
                android:backgroundTint="@color/grey_1"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_5dp"
                android:paddingEnd="@dimen/_5dp">

                <TextView
                    android:id="@+id/status_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="--"
                    android:textSize="@dimen/_12sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/status_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/status_value"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="@string/status"
                    android:textSize="@dimen/_12sp"
                    android:visibility="visible" />
            </RelativeLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
