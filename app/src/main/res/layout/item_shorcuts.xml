<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_15dp"
    android:layout_marginHorizontal="@dimen/_10dp"
    android:layout_marginVertical="@dimen/_7dp"
    android:background="@drawable/white_rect"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_upcoming_visits"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/_1sp"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
        android:text="@string/upcoming_visits"
        android:textColor="@color/blue"
        android:textSize="@dimen/_16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5dp"
        android:lineSpacingExtra="@dimen/_2sp"
        app:layout_constraintTop_toBottomOf="@+id/text_upcoming_visits"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        android:text="Review your Interest Profiler assessment results"
        android:textColor="@color/black_1"
        android:textSize="@dimen/_16sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>