<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_1">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/_10dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_20dp"
                    android:paddingEnd="@dimen/_20dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_20dp"
                        android:fontFamily="@font/inter_bold"
                        android:lineSpacingExtra="2sp"
                        android:text="@string/about"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/aboutdes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:fontFamily="@font/inter_regular"
                        android:lineSpacingExtra="2sp"
                        android:textColor="@color/black_1"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/about" />

                    <TextView
                        android:id="@+id/web"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:fontFamily="@font/inter_bold"
                        android:lineSpacingExtra="2sp"
                        android:text="@string/web"
                        android:textColor="@color/black_1"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/aboutdes" />

                    <TextView
                        android:id="@+id/webUrl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20dp"
                        android:lineSpacingExtra="2sp"
                        android:text="http://www.usyd.edu.au"
                        android:textColor="@color/black_1"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/web"
                        app:layout_constraintTop_toBottomOf="@id/aboutdes" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_5sp"
                        android:fontFamily="@font/inter_bold"
                        android:lineSpacingExtra="2sp"
                        android:text="@string/phone"
                        android:textColor="@color/black_1"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/web" />

                    <TextView
                        android:id="@+id/phoneNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sp"
                        android:lineSpacingExtra="2sp"
                        android:text="+61(2) 9351-2222"
                        android:textColor="@color/black_1"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/phone"
                        app:layout_constraintTop_toBottomOf="@id/web" />

                    <TextView
                        android:id="@+id/enviro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_5sp"
                        android:fontFamily="@font/inter_bold"
                        android:lineSpacingExtra="2sp"
                        android:text="Type of Environment:"
                        android:textColor="@color/black_1"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/phone" />

                    <TextView
                        android:id="@+id/entType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sp"
                        android:lineSpacingExtra="2sp"
                        android:text="N/A"
                        android:textColor="@color/black_1"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/enviro"
                        app:layout_constraintTop_toBottomOf="@id/phone" />

                    <TextView
                        android:id="@+id/institutionType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_5sp"
                        android:fontFamily="@font/inter_bold"
                        android:lineSpacingExtra="2sp"
                        android:text="@string/institution_type"
                        android:textColor="@color/black_1"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/entType" />

                    <TextView
                        android:id="@+id/intsType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sp"
                        android:layout_marginRight="@dimen/_20dp"
                        android:lineSpacingExtra="2sp"
                        android:text="N/A"
                        android:textColor="@color/black_1"
                        android:textSize="14sp"
                        app:layout_constraintStart_toEndOf="@id/institutionType"
                        app:layout_constraintTop_toBottomOf="@id/enviro" />

                    <TextView
                        android:id="@+id/public_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_5sp"
                        android:fontFamily="@font/inter_bold"
                        android:lineSpacingExtra="2sp"
                        android:text="Term Type:"
                        android:textColor="@color/black_1"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/institutionType" />

                    <TextView
                        android:id="@+id/term_typ"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sp"
                        android:gravity="left"
                        android:lineSpacingExtra="2sp"
                        android:text=" N/A"
                        android:textColor="@color/black_1"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/public_type"
                        app:layout_constraintTop_toBottomOf="@id/institutionType" />

                    <TextView
                        android:id="@+id/types"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:layout_marginTop="@dimen/_5sp"
                        android:fontFamily="@font/inter_bold"
                        android:lineSpacingExtra="2sp"
                        android:text="@string/degree_type"
                        android:textColor="@color/black_1"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/public_type" />

                    <TextView
                        android:id="@+id/degree"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sp"
                        android:lineSpacingExtra="2sp"
                        android:paddingEnd="@dimen/_20dp"
                        android:text="N/A"
                        android:textColor="@color/black_1"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/types"
                        app:layout_constraintStart_toEndOf="@id/types"
                        app:layout_constraintTop_toBottomOf="@id/public_type" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/map_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/background_curve_rectangle_white_filled"
                app:layout_constraintTop_toBottomOf="@id/layout">

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:fontFamily="@font/inter_bold"
                    android:lineSpacingExtra="2sp"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <FrameLayout
                    android:id="@+id/map_"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200dp"

                    android:padding="@dimen/_5dp"
                    app:layout_constraintTop_toBottomOf="@id/location">

                    <FrameLayout
                        android:id="@+id/map"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toTopOf="parent" />


                </FrameLayout>

                <TextView
                    android:id="@+id/locTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:drawableStart="@drawable/loc"
                    android:drawablePadding="@dimen/_5dp"
                    android:fontFamily="@font/inter_medium"
                    android:lineSpacingExtra="2sp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/map_" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@color/tint"
                app:layout_constraintTop_toBottomOf="@id/map_layout" />

            <TextView
                android:visibility="gone"
                android:id="@+id/textVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_20dp"
                android:fontFamily="@font/inter_bold"
                android:lineSpacingExtra="2sp"
                android:text="Videos"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view" />

            <androidx.recyclerview.widget.RecyclerView
               android:visibility="gone"
                android:id="@+id/recycler_View"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textVideo" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>