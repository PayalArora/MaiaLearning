<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/clear_text"
            android:layout_toRightOf="@+id/back_btn"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:padding="@dimen/_15dp"
            android:text="@string/add_round"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:drawablePadding="@dimen/_5dp"
            android:drawableTint="@color/black_1"
            android:gravity="center"
            android:paddingVertical="@dimen/_15dp"
            android:text="@string/back"
            android:textSize="@dimen/_14sp" />

        <TextView
            android:id="@+id/clear_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/inter"
            android:padding="@dimen/_15dp"
            android:text="@string/clear"
            android:textColor="@color/black_1"
            android:textFontWeight="500"
            android:textSize="@dimen/_14sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_below="@+id/filters"

        android:background="@color/divider_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp"
        android:text="@string/previous_application_status" />

    <RelativeLayout
        android:id="@+id/previous_spinner_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:background="@drawable/white_rect_border"
        android:gravity="center_vertical">


        <Spinner
            android:id="@+id/previous_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:dropDownVerticalOffset="20dp"
            android:fontFamily="@font/inter_regular"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown"
            android:theme="@style/MatchSpinnerTheme" />

        <ImageView
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginBottom="5dp"
            android:padding="@dimen/_5dp"
            android:rotation="270"
            android:src="@drawable/back_arrow" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_25dp"
        android:text="@string/new_application_plan" />

    <RelativeLayout
        android:id="@+id/new_spinner_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45dp"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:background="@drawable/white_rect_border"
        android:gravity="center_vertical">


        <Spinner
            android:id="@+id/new_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:dropDownVerticalOffset="20dp"
            android:fontFamily="@font/inter_regular"
            android:overlapAnchor="false"
            android:spinnerMode="dropdown"
            android:theme="@style/MatchSpinnerTheme" />

        <ImageView
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginBottom="5dp"
            android:padding="@dimen/_5dp"
            android:rotation="270"
            android:src="@drawable/back_arrow" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/_10dp"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/cancel_round"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_50dp"
            android:layout_marginHorizontal="@dimen/_15dp"
            android:layout_marginTop="@dimen/_15dp"
            android:background="@drawable/white_rect_24"
            android:backgroundTint="@color/blue_alpha"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textFontWeight="500"
            android:textSize="@dimen/_14sp" />
        <TextView
            android:id="@+id/save_round"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_50dp"
            android:layout_marginHorizontal="@dimen/_15dp"
            android:layout_marginTop="@dimen/_15dp"
            android:background="@drawable/white_rect_24"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="@string/save_round"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="500"
            android:textSize="@dimen/_14sp" />
    </LinearLayout>
</LinearLayout>