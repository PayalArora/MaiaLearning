<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white_1">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10dp"
        android:paddingVertical="@dimen/_10dp"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="@dimen/_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginVertical="@dimen/_20dp"
        >

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/spinner_lay"
                app:layout_constraintEnd_toStartOf="@id/spinner_lay1"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/white_rounded_withboundary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="match_parent">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:dropDownVerticalOffset="20dp"
                android:fontFamily="@font/inter_regular"
                android:overlapAnchor="false"
                android:spinnerMode="dropdown"
                android:theme="@style/MatchSpinnerTheme" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/spinner_lay1"
              android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_5dp"
                android:background="@drawable/white_rounded_withboundary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/spinner_lay"
                app:layout_constraintTop_toTopOf="parent">
            <EditText
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_rounded_withboundary"
                android:padding="@dimen/_10dp"
                android:hint="By keyword"
                android:visibility="gone"
                android:drawableTint="@color/black_1"
                android:drawableEnd="@drawable/drop_arrow"
                app:layout_constraintEnd_toStartOf="@id/text2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:visibility="visible"
                android:id="@+id/outSpinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:layout_marginStart="@dimen/_10dp"
                android:dropDownVerticalOffset="20dp"
                android:fontFamily="@font/inter_regular"
                android:overlapAnchor="false"
                android:spinnerMode="dropdown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/spinner_lay"
                app:layout_constraintTop_toTopOf="parent"
                android:theme="@style/MatchSpinnerTheme" />
            <EditText
                android:id="@+id/text2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40dp"
                android:layout_marginStart="@dimen/_10dp"
                android:singleLine="true"
                android:background="@drawable/white_rounded_withboundary"
                android:padding="@dimen/_10dp"
                android:imeOptions="actionSearch"
                android:hint="Search"
                android:drawableTint="@color/black_1"
                android:drawableStart="@drawable/ic_baseline_search_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/spinner_lay"
                app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_lay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/search"
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_80dp"
            app:backgroundTint="#263743BE"
            android:background="@drawable/white_rounded"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_baseline_search_24"
            android:padding="@dimen/_20dp"
            app:tint="#3743BE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:textSize="@dimen/_16sp"
            android:text="Select filter types \n to search"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10dp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        app:layout_constraintStart_toStartOf="@id/card_view"
        app:layout_constraintEnd_toEndOf="@id/card_view">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_10dp"
        android:fontFamily="@font/inter_bold"
        android:lineSpacingExtra="2sp"
        android:text="Programs"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listProgram"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintBottom_toBottomOf="parent"
       tools:listitem="@layout/search_career_adapter"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>