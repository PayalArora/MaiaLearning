<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5dp"
    android:background="@drawable/white_rounded"
    android:padding="@dimen/_10dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/_35dp"
        android:layout_height="@dimen/_35dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_documents" />

    <RelativeLayout
        android:id="@+id/address_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginHorizontal="@dimen/_15dp"
            android:layout_marginTop="@dimen/_5dp"
            android:fontFamily="@font/inter_bold"
            android:lineSpacingExtra="@dimen/_2sp"
            android:text="@string/assignment_making"
            android:textColor="@color/univ_name"
            android:textSize="@dimen/_14sp" />


    </RelativeLayout>

    <ImageButton
        android:layout_width="@dimen/_10dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginRight="@dimen/_15dp"
        android:layout_toRightOf="@+id/address_lay"
        android:background="@android:color/transparent"
        android:src="@drawable/menu_dots" />
</RelativeLayout>