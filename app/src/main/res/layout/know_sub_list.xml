<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10dp"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_marginEnd="@dimen/_10dp"
    android:background="#F5F7FC"
    app:cardBackgroundColor="#F5F7FC"
    app:cardCornerRadius="@dimen/_20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:fontFamily="@font/inter_bold"
            android:lineSpacingExtra="2sp"
            android:layout_marginTop="@dimen/_10dp"
            android:text="1b. Academic: Classes or subjects you Enjoy the Most"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



            <EditText
                android:id="@+id/text3"
                android:enabled="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_curve_rectangle_white_filled"
                android:padding="@dimen/_15dp"
                android:textSize="@dimen/_14sp"
                android:fontFamily="@font/inter_medium"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_10dp"
                android:textColor="@color/black"
                android:text="Skateboarding, building things, and..."
                android:drawableTint="@color/black_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>