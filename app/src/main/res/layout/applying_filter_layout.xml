<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/filters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/inter_bold"
        android:padding="@dimen/_15dp"
        android:text="@string/filters"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/ic_baseline_keyboard_arrow_left_24"
        android:drawablePadding="@dimen/_5dp"
        android:drawableTint="@color/black_1"
        android:gravity="center"
        android:paddingVertical="@dimen/_15dp"
        android:text="@string/back"
        android:textSize="@dimen/_14sp" />

    <TextView
        android:id="@+id/clear_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/inter"
        android:padding="@dimen/_15dp"
        android:text="@string/clear"
        android:textColor="@color/black_1"
        android:textFontWeight="500"
        android:textSize="@dimen/_14sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_below="@+id/filters"

        android:background="@color/divider_color" />

    <RelativeLayout
        android:id="@+id/country_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_below="@id/view1">

        <ImageView
            android:id="@+id/flag_img"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_25dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_toLeftOf="@+id/right_arrow"
            android:src="@drawable/us_flag"
            android:visibility="gone" />

        <TextView
            android:id="@+id/flag_text"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_25dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_toLeftOf="@+id/right_arrow"
            android:gravity="right|center"
            android:text="2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter"
            android:padding="@dimen/_15dp"
            android:text="@string/country"
            android:textColor="@color/black_1"
            android:textFontWeight="500"
            android:textSize="@dimen/_16sp" />

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5dp"

            android:layout_marginEnd="@dimen/_15dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_below="@+id/country_item"
        android:background="@color/divider_color" />

    <RelativeLayout
        android:id="@+id/applying_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_below="@id/view2">

        <TextView
            android:id="@+id/applying_with"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter"
            android:padding="@dimen/_15dp"
            android:text="@string/applying_with"
            android:textColor="@color/black_1"
            android:textFontWeight="500"
            android:textSize="@dimen/_16sp" />

        <ImageView
            android:id="@+id/right_arrow_applying_with"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5dp"

            android:layout_marginEnd="@dimen/_15dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
    </RelativeLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_below="@+id/applying_item"
        android:background="@color/divider_color" />

    <RelativeLayout
        android:id="@+id/missing_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_below="@id/view3">

        <TextView
            android:id="@+id/missing_with"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter"
            android:padding="@dimen/_15dp"
            android:text="@string/missing"
            android:textColor="@color/black_1"
            android:textFontWeight="500"
            android:textSize="@dimen/_16sp" />

        <ImageView
            android:id="@+id/right_arrow_missing_with"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5dp"

            android:layout_marginEnd="@dimen/_15dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
    </RelativeLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_below="@+id/missing_item"
        android:background="@color/divider_color" />

    <RelativeLayout
        android:id="@+id/test_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_below="@id/view4">

        <TextView
            android:id="@+id/test_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter"
            android:padding="@dimen/_15dp"
            android:text="@string/test_scores"
            android:textColor="@color/black_1"
            android:textFontWeight="500"
            android:textSize="@dimen/_16sp" />

        <ImageView
            android:id="@+id/right_arrow_test_with"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5dp"

            android:layout_marginEnd="@dimen/_15dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
    </RelativeLayout>
    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_below="@+id/applying_item"
        android:background="@color/divider_color" />
    <LinearLayout
        android:layout_below="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:backgroundTint="@color/blue_alpha"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/transcript_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:thumb="@drawable/thum_selector"
                app:track="@drawable/track_selector" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_rect_15"
                    android:backgroundTint="@color/green_3"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="@string/request_trans"
                    android:textAllCaps="false"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_12sp"
                    android:textStyle="bold" />



            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/_10dp"
            android:layout_gravity="center"

            android:layout_marginStart="@dimen/_5dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:background="@color/divider_color" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/applied_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:thumb="@drawable/thum_selector"
                app:track="@drawable/track_selector" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/_5dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_rect_15"
                    android:backgroundTint="@color/green_3"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="@string/transcript_ncaa"
                    android:textAllCaps="false"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_12sp"
                    android:textStyle="bold" />



            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>