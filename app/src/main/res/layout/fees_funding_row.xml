<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/flag_icon"
        android:layout_width="@dimen/_25dp"
        android:layout_height="@dimen/_25dp"
        android:layout_marginVertical="@dimen/_10dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:src="@drawable/error" />

    <TextView
        android:id="@+id/country_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/fees_lay"
        android:layout_toEndOf="@+id/flag_icon"
        android:padding="@dimen/_10dp"
        android:text="country_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fees_lay"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/country_txt"
            android:background="@color/rounded_blue"
            android:backgroundTint="@color/green_tint"
            android:fontFamily="@font/inter_bold"
            android:padding="@dimen/_10dp"
            android:text="fees"
            android:id="@+id/fees_text"
            android:textColor="@color/green_1" />

        <TextView
            android:id="@+id/year_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/flag_icon"
            android:padding="@dimen/_10dp"
            android:text="country_name" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/fees_lay"
        android:background="@color/gray_2"
        android:layout_height="@dimen/_1dp"/>
</RelativeLayout>