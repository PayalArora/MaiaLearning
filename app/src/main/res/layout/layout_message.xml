<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/_20dp"
    android:background="@color/white"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/img_user"
    android:layout_width="@dimen/_32dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_height="@dimen/_32dp"
    android:src="@drawable/dummy_user"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"

    />
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:lineSpacingExtra="@dimen/_1sp"
        android:layout_marginLeft="@dimen/_10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_user"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Heike Hilgenbrink"
        android:textColor="@color/black_2"
        android:textSize="@dimen/_16sp"/>
    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:lineSpacingExtra="@dimen/_1sp"
        android:layout_marginLeft="@dimen/_10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="13:30"
        android:textColor="@color/black_3"
        android:textSize="@dimen/_16sp"/>
    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:lineSpacingExtra="@dimen/_2sp"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10dp"
        android:ellipsize="end"
        app:layout_constraintLeft_toRightOf="@+id/img_user"
        android:maxLines="1"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscinglit"
        android:textColor="@color/black_1"
        android:textSize="@dimen/_14sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>