<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/icon_lay"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:background="@drawable/univ_rounded_icon">

                    <ImageView
                        android:id="@+id/univ_icon"
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/univ_icon" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5dp"
                    android:layout_toStartOf="@+id/info_lay"
                    android:layout_toEndOf="@+id/icon_lay"
                    android:text="@string/university_of_calefornia"
                    android:textColor="@color/univ_name"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/info_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:background="@drawable/univ_rounded_icon"
                        android:backgroundTint="#F89A1F">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="@dimen/_10dp"
                            android:layout_height="@dimen/_10dp"
                            android:layout_margin="@dimen/_5dp"
                            android:src="@drawable/position_img" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5dp"
                            android:layout_marginEnd="@dimen/_5dp"
                            android:layout_toEndOf="@+id/icon"
                            android:text="@string/first"
                            android:textColor="@color/univ_name"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_marginStart="@dimen/_5dp"
                        android:src="@drawable/info_icon" />

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_marginStart="@dimen/_5dp"
                        android:src="@drawable/menu_dots" />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:background="div"
                android:layout_height="@dimen/_1dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingVertical="@dimen/_10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:id="@+id/add"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5dp"
                    android:src="@drawable/add_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/date_by"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/add"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_height="@dimen/_40dp">

                    <View
                        android:layout_width="1dp"
                        android:background="@color/divider_color"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:src="@drawable/comment"
                        android:layout_marginStart="@dimen/_5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="@dimen/_20dp" />
                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>