<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10dp"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_marginEnd="@dimen/_10dp"
    android:background="#F5F7FC"
    app:cardBackgroundColor="#F5F7FC"
    app:cardCornerRadius="@dimen/_20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10dp"
       >

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:fontFamily="@font/inter_bold"
            android:lineSpacingExtra="2sp"
            android:text="Basic Skills: Use a combination of techniques to read, listen to, and analyze complex information; conveys information in oral and written form; uses multiple computational skills to analyze and solve mathematical problems."
            android:textColor="@color/black_1"
            android:textSize="@dimen/_14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_30dp"
            app:layout_constraintTop_toBottomOf="@id/name">
            <TextView
                android:id="@+id/start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10dp"
                android:text="Start Level"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/_14sp"
              android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@id/text2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10dp"
                android:layout_marginStart="@dimen/_10dp"
                android:text="Final Level"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/text1"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_curve_rectangle_white_filled"
                android:padding="@dimen/_10dp"
                android:text="1"
                android:drawableTint="@color/black_1"
                android:drawableEnd="@drawable/drop_arrow"
                app:layout_constraintEnd_toStartOf="@id/text2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/start" />

            <EditText
                android:id="@+id/text2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:background="@drawable/background_curve_rectangle_white_filled"
                android:padding="@dimen/_10dp"
                android:text="1"
                android:drawableTint="@color/black_1"
                android:drawableEnd="@drawable/drop_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/text1"
                app:layout_constraintTop_toBottomOf="@id/end" />

            <EditText
                android:id="@+id/text3"
                android:enabled="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_curve_rectangle_white_filled"
                android:padding="@dimen/_10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/_10dp"
                android:hint="Experiences, Activities \nand Applications"
                android:drawableTint="@color/black_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text1" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>