<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_marginHorizontal="@dimen/_10dp"
    android:background="@color/white"
    android:elevation="@dimen/_0dp"
    android:layout_marginBottom="@dimen/_10dp"
    app:cardCornerRadius="@dimen/_15dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10dp"
        android:paddingHorizontal="@dimen/_10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/question_lay"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/count_txt"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/forgot_circle"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/ques"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_gravity="top"
                android:paddingLeft="@dimen/_10dp"
                android:textColor="@color/black_1"
                android:textSize="@dimen/_14sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question_lay"
            android:layout_marginTop="@dimen/_15dp"
            android:background="@drawable/background_curve_rectangle_white_filled"
            android:fontFamily="@font/inter"
            android:gravity="top|left"
            android:hint="@string/enter_answer_hint"
            android:lineSpacingExtra="@dimen/_2sp"
            android:minHeight="@dimen/_100dp"
            android:paddingHorizontal="@dimen/_15dp"
            android:paddingVertical="@dimen/_5dp"
            android:textColor="@color/black_1"
            android:textSize="@dimen/_16sp"
            android:visibility="gone" />
<LinearLayout
    android:id="@+id/layout_checkbox"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:visibility="gone"
    android:layout_below="@+id/question_lay"
    android:layout_marginTop="@dimen/_15dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_40dp"
        android:background="@drawable/blue_rect_border"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="1"
        
        android:layout_weight="1"
        android:textColor="@color/blue" />
    <TextView
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_40dp"
        android:background="@drawable/blue_rect_border"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="1"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_weight="1"
        android:textColor="@color/blue" />
    <TextView
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_40dp"
        android:background="@drawable/blue_rect_border"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="1"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_weight="1"
        android:textColor="@color/blue" />
    <TextView
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_40dp"
        android:background="@drawable/blue_rect_border"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="1"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_weight="1"
        android:textColor="@color/blue" />
    <TextView
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_40dp"
        android:layout_weight="1"
        android:background="@drawable/blue_rect_border"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="1"
        android:layout_marginLeft="@dimen/_10dp"
        android:textColor="@color/blue" />
    <TextView
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_40dp"
        android:background="@drawable/blue_rect_border"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:layout_weight="1"
        android:text="1"
        android:layout_marginLeft="@dimen/_10dp"
        android:textColor="@color/blue" />
    <TextView
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_40dp"
        android:background="@drawable/blue_rect_border"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:layout_weight="1"
        android:text="1"
        android:layout_marginLeft="@dimen/_10dp"
        android:textColor="@color/blue" />
    <TextView
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_40dp"
        android:background="@drawable/blue_rect_border"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:text="1"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_weight="1"
        android:textColor="@color/blue" />
    <TextView
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_40dp"
        android:background="@drawable/blue_rect_border"
        android:fontFamily="@font/inter_bold"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_10dp"
        android:text="1"
        android:textColor="@color/blue" />
    <TextView
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_40dp"
        android:background="@drawable/blue_rect_border"
        android:fontFamily="@font/inter_bold"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/_10dp"
        android:text="1"
        android:textColor="@color/blue" />
</LinearLayout>

        <LinearLayout
            android:id="@+id/layout_single_choice"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_below="@+id/question_lay"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_multi_choice"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_below="@+id/question_lay"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="wrap_content"
                android:gravity="top"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black_1"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10dp"
                android:layout_marginTop="@dimen/_5dp"
                android:button="@drawable/check_radio"
                android:buttonTint="@color/checkbutton"
                android:fontFamily="@font/inter_regular"
                android:paddingStart="@dimen/_10dp"
                android:text="A genetic marker will only be freely recombining (Rf=0.5) with respect to markers on other chromosomes, and never freely recombine with respect to markers on the same chromosome
2 genetic markers that are located on the same chromosome will always be inherited together in the offspring unless crossing over occurs
2 genetic markers with a recombination frequency of 0 (completely linked) have a 50% chance of being located on the same chromosome genetic markers with a recombination frequency of 0 (completely linked) will always be on the same chromosome" />

            <CheckBox
                android:layout_width="wrap_content"
                android:gravity="top"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black_1"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10dp"
                android:layout_marginTop="@dimen/_5dp"
                android:button="@drawable/check_radio"
                android:buttonTint="@color/checkbutton"
                android:fontFamily="@font/inter_regular"
                android:paddingStart="@dimen/_10dp"
                android:text="A genetic marker will only be freely recombining (Rf=0.5) with respect to markers on other chromosomes, and never freely recombine with respect to markers on the same chromosome
2 genetic markers that are located on the same chromosome will always be inherited together in the offspring unless crossing over occurs
2 genetic markers with a recombination frequency of 0 (completely linked) have a 50% chance of being located on the same chromosome genetic markers with a recombination frequency of 0 (completely linked) will always be on the same chromosome" />
            <CheckBox
                android:layout_width="wrap_content"
                android:gravity="top"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black_1"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10dp"
                android:layout_marginTop="@dimen/_5dp"
                android:button="@drawable/check_radio"
                android:buttonTint="@color/checkbutton"
                android:fontFamily="@font/inter_regular"
                android:paddingStart="@dimen/_10dp"
                android:text="A genetic marker will only be freely recombining (Rf=0.5) with respect to markers on other chromosomes, and never freely recombine with respect to markers on the same chromosome
2 genetic markers that are located on the same chromosome will always be inherited together in the offspring unless crossing over occurs
2 genetic markers with a recombination frequency of 0 (completely linked) have a 50% chance of being located on the same chromosome genetic markers with a recombination frequency of 0 (completely linked) will always be on the same chromosome" />
            <CheckBox
                android:id="@+id/rb_inenr"
                android:layout_width="wrap_content"
                android:gravity="top"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/black_1"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10dp"
                android:layout_marginTop="@dimen/_5dp"
                android:button="@drawable/check_radio"
                android:buttonTint="@color/checkbutton"
                android:fontFamily="@font/inter_regular"
                android:paddingStart="@dimen/_10dp"
                android:text="A genetic marker will only be freely recombining (Rf=0.5) with respect to markers on other chromosomes, and never freely recombine with respect to markers on the same chromosome
2 genetic markers that are located on the same chromosome will always be inherited together in the offspring unless crossing over occurs
2 genetic markers with a recombination frequency of 0 (completely linked) have a 50% chance of being located on the same chromosome genetic markers with a recombination frequency of 0 (completely linked) will always be on the same chromosome" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_congratulations"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_below="@+id/question_lay"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/rb_other_app"
                android:layout_width="@dimen/_35dp"
                android:layout_height="@dimen/_35dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="start"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:button="@drawable/radiobutton_done"
                android:buttonTint="@color/green_1"
                android:checked="true"
                android:clickable="false"
                android:enabled="false"
                android:fontFamily="@font/inter"
                android:layoutDirection="rtl"
                android:paddingStart="@dimen/_10dp"
                android:textColor="@color/green_1"
                android:textFontWeight="800"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold"
                android:visibility="visible" />
            <TextView
                android:id="@+id/cong_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textStyle="bold"
                android:paddingLeft="@dimen/_10dp"
                android:text="@string/congracts"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sp" />
            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:paddingLeft="@dimen/_10dp"
                android:text="You’re studying inheritance at genes E and F. A diploid female with genotype EeFf lays an egg. Which of the following egg genotypes is recombinant?"
                android:textColor="@color/black_1"
                android:textSize="@dimen/_14sp" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>