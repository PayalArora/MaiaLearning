<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/_10dp"
    android:layout_marginEnd="@dimen/_10dp"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/_20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_10dp"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_marginStart="@dimen/_10dp"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/button"/>
        <ImageView
            android:id="@+id/dots"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/menu_dots"
           />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:fontFamily="@font/inter_bold"
            android:lineSpacingExtra="2sp"
            android:text="Psychology"
            android:textColor="@color/black_1"
            android:textSize="@dimen/_14sp"
            app:layout_constraintStart_toEndOf="@id/button"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/name1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:fontFamily="@font/inter_medium"
            android:layout_marginTop="@dimen/_10dp"
            android:text="I'm going to join the biology and physics clubs. I plan to tutor grade 9 students in Mrs. Smith's science. Take Physics 101 at local community college over summer of junior year."
            android:textColor="@color/black_1"
            android:textSize="@dimen/_14sp"
            app:layout_constraintEnd_toStartOf="@id/dots"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>