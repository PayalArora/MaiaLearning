<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5dp"
        android:layout_marginHorizontal="@dimen/_10dp"
        android:layout_marginVertical="@dimen/_7dp"
        android:background="@color/white"
        android:elevation="@dimen/_10dp"
        app:cardCornerRadius="@dimen/_18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10dp"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_7dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/icon_lay"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:background="@drawable/univ_rounded_icon">

                    <ImageView
                        android:id="@+id/univ_icon"
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/univ_icon" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/uni_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5dp"
                    android:layout_toStartOf="@+id/info_lay"
                    android:layout_toEndOf="@+id/icon_lay"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/university_of_calefornia"
                    android:textColor="@color/univ_name"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/info_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:background="@drawable/univ_rounded_icon"
                        android:backgroundTint="#F89A1F">

                        <ImageView
                            android:id="@+id/icon"
                            android:layout_width="@dimen/_10dp"
                            android:layout_height="@dimen/_10dp"
                            android:layout_margin="@dimen/_5dp"
                            android:src="@drawable/position_img" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5dp"
                            android:layout_marginEnd="@dimen/_5dp"
                            android:layout_toEndOf="@+id/icon"
                            android:text="@string/first"
                            android:textColor="@color/univ_name"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_marginStart="@dimen/_5dp"
                        android:backgroundTint="@color/grey_4"
                        android:src="@drawable/info_icon" />

                    <ImageView
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_marginStart="@dimen/_5dp"
                        android:src="@drawable/menu_dots" />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginTop="@dimen/_5dp"

                android:background="@color/divider_color" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:paddingVertical="@dimen/_5dp">

                <ImageView
                    android:id="@+id/add"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5dp"
                    android:src="@drawable/add_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_toLeftOf="@+id/commentImg"
                    android:layout_toRightOf="@+id/add"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_regular"
                    android:maxLines="2"
                    android:text="@string/date_by"
                    android:textSize="@dimen/_12sp" />


                <ImageView
                    android:layout_width="@dimen/_18dp"
                    android:layout_height="@dimen/_15dp"
                    android:id="@+id/commentImg"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_2dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_message" />

                <TextView
                    android:layout_width="@dimen/_10dp"
                    android:layout_height="@dimen/_10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_1dp"
                    android:background="@drawable/black_circle"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_7sp" />


            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginTop="@dimen/_5dp"

                android:background="@color/divider_color" />


            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp">

                <TextView
                    android:id="@+id/text_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/_10dp"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/deadline"
                    android:textColor="@color/red_1"
                    android:textSize="@dimen/_12sp"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/_10dp"
                    android:layout_toRightOf="@+id/text_deadline"
                    android:drawableRight="@drawable/ic_flag"
                    android:drawablePadding="@dimen/_5dp"
                    android:fontFamily="@font/inter_bold"

                    android:paddingStart="@dimen/_10dp"
                    android:text="14 May 2021"
                    android:textColor="@color/red_1"
                    android:textSize="@dimen/_12sp" />

                <TextView
                    android:id="@+id/text_internal"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_toLeftOf="@+id/text_internal_date"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/internal"
                    android:textColor="@color/blue_1"
                    android:textSize="@dimen/_12sp"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/text_internal_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginVertical="@dimen/_10dp"
                    android:drawableRight="@drawable/ic_flag"
                    android:drawablePadding="@dimen/_5dp"
                    android:drawableTint="@color/blue_1"
                    android:fontFamily="@font/inter_bold"
                    android:paddingStart="@dimen/_10dp"

                    android:text="14 May 2021"
                    android:textColor="@color/blue_1"

                    android:textSize="@dimen/_12sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginTop="@dimen/_5dp"

                android:background="@color/divider_color" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_5dp">

                <TextView
                    android:id="@+id/text_cr_required"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/_10dp"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/cr_required"
                    android:textColor="@color/blue_2"
                    android:textSize="@dimen/_12sp"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/text_te"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/_10dp"
                    android:layout_toRightOf="@+id/text_cr_required"
                    android:drawablePadding="@dimen/_5dp"
                    android:fontFamily="@font/inter_bold"

                    android:paddingStart="@dimen/_10dp"
                    android:text="TE: 1â€”2"
                    android:textColor="@color/blue_2"
                    android:textSize="@dimen/_12sp" />

                <ImageButton
                    android:id="@+id/img_common_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"


                    android:src="@drawable/ic_common_app" />
            </RelativeLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginTop="@dimen/_5dp"


                android:background="@color/divider_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/app_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/white_rect_15"
                    android:backgroundTint="@color/gray_2"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_5dp">

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_15dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/type"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_12sp" />

                    <TextView
                        android:id="@+id/type_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_horizontal|top"
                        android:text="@string/ucas"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/app_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_toRightOf="@+id/app_type"
                    android:layout_weight="1"
                    android:background="@drawable/white_rect_15"
                    android:backgroundTint="@color/gray_2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/term"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_15dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/term"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_12sp" />

                    <TextView
                        android:id="@+id/term_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_horizontal|top"
                        android:paddingVertical="@dimen/_5dp"
                        android:text="@string/spring_2022"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/app_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_toRightOf="@+id/app_term"
                    android:layout_weight="1"
                    android:background="@drawable/white_rect_15"
                    android:backgroundTint="@color/gray_2"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/_5dp">

                    <TextView
                        android:id="@+id/plan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_15dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/plan"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_12sp" />

                    <TextView
                        android:id="@+id/plan_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_horizontal|top"
                        android:text="Regular Admission"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginTop="@dimen/_5dp"

                android:background="@color/divider_color" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/add_button"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/program"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_15dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/program"
                        android:textColor="@color/black_1"
                        android:textSize="@dimen/_12sp" />

                    <Spinner
                        android:id="@+id/all_system"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30dp"
                        android:layout_marginStart="@dimen/_5dp"
                        android:fontFamily="@font/inter_regular"
                        android:gravity="center_horizontal|top"
                        android:background="@drawable/white_rect_24"
                        android:dropDownVerticalOffset="20dp"
                        android:overlapAnchor="false"
                        android:theme="@style/MatchSpinnerTheme"
                        android:spinnerMode="dropdown"
                        />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/add_button"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_alignParentRight="true"

                    android:layout_marginHorizontal="@dimen/_10dp"
                    android:background="@drawable/white_rect_15"
                    android:backgroundTint="@color/blue_alpha"
                    android:src="@drawable/ic_baseline_add_24" />
            </RelativeLayout>

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginVertical="@dimen/_10dp"
                android:background="@color/divider_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue_alpha"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/transcript_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:thumb="@drawable/thum_selector"
                        app:track="@drawable/track_selector" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_rect_15"
                            android:backgroundTint="@color/green_3"
                            android:gravity="center"
                            android:paddingVertical="5dp"
                            android:text="@string/transcript_request"
                            android:textAllCaps="false"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_rect_15"
                            android:paddingVertical="5dp"
                            android:text="Nov 12,2022"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_12sp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/_10dp"
                    android:layout_marginStart="@dimen/_5dp"
                    android:layout_marginEnd="@dimen/_5dp"
                    android:background="@color/divider_color" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/applied_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:thumb="@drawable/thum_selector"
                        app:track="@drawable/track_selector" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_5dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_rect_15"
                            android:backgroundTint="@color/green_3"
                            android:gravity="center"
                            android:paddingVertical="5dp"
                            android:text="@string/ia_have_applied"
                            android:textAllCaps="false"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_rect_15"
                            android:paddingVertical="5dp"
                            android:text="Nov 12,2022"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_12sp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/white_rect_15"
                android:backgroundTint="@color/green_3"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="@string/likely"
                android:textAllCaps="false"
                android:textColor="@color/green_1"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>