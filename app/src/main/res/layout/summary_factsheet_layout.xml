                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold"
                        android:text="@string/per_jobs"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_weight=".7"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_org"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/job"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold"
                        android:text="@string/jobs"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/_5dp"
                        android:layout_weight=".7"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_org"
                        android:textSize="16sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/gender_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"


                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold"
                        android:text="@string/age"
                        android:textStyle="bold"

                        android:layout_weight="1.3"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_org"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/genderper_job"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold"
                        android:text="@string/per_jobs"
                        android:textStyle="bold"

                        android:layout_marginStart="@dimen/_30dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_org"
                        android:textSize="16sp"
                        />
                    <TextView
                        android:id="@+id/gender_job"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold"
                        android:text="@string/jobs"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/_5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_org"
                        android:textSize="16sp"
                        />
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/age_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/age_item"
                    android:layout_marginTop="@dimen/_5dp"
                    app:layout_constraintTop_toBottomOf="@id/age_view" />
