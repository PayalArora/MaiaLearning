<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_5dp">

        <ImageView
            android:id="@+id/ic_carr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10dp"
            android:src="@drawable/career"
            app:tint="@color/blue_2" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10dp"
            android:background="@drawable/round_rect"
            android:backgroundTint="@color/yellow1"
            android:paddingVertical="@dimen/_5dp"
            android:paddingLeft="@dimen/_5dp"
            android:paddingEnd="@dimen/_10dp">

            <ImageView
                android:id="@+id/trop_img"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_award" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_toRightOf="@+id/trop_img"
                android:fontFamily="@font/inter_bold"
                android:text="2"
                android:textColor="@color/yellow" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10dp"
            android:background="@drawable/round_rect"
            android:backgroundTint="@color/green_3"
            android:paddingVertical="@dimen/_5dp"
            android:paddingLeft="@dimen/_5dp"
            android:paddingEnd="@dimen/_10dp">

            <LinearLayout
                android:id="@+id/tick_img"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_20dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/white">

                <ImageView
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_20dp"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:src="@drawable/green_tick" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_toRightOf="@+id/tick_img"
                android:fontFamily="@font/inter_bold"
                android:text="@string/lead"
                android:textColor="@color/green_1" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_toRightOf="@+id/ic_carr"
            android:fontFamily="@font/inter_black"
            android:text="@string/food_runner"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_toRightOf="@+id/ic_carr"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/at_cup"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_5dp"
        android:layout_marginBottom="@dimen/_5dp"
        android:layout_toRightOf="@+id/ic_carr"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/community_center"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginEnd="@dimen/_5dp"
        android:layout_marginBottom="@dimen/_5dp"
        android:layout_toRightOf="@+id/ic_carr"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/grades"
        android:textColor="@color/univ_name"
        android:textSize="@dimen/_14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_5dp"
        android:layout_marginBottom="@dimen/_5dp"
        android:layout_toRightOf="@+id/ic_carr"
        android:fontFamily="@font/inter_regular"
        android:text="@string/cupertino"
        android:textColor="@color/univ_name"
        android:textSize="@dimen/_14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ic_hyp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:fontFamily="@font/inter_semibold"
            android:text="-" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_toRightOf="@+id/ic_hyp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/helping"
            android:textColor="@color/univ_name"
            android:textSize="@dimen/_14sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/delete_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:orientation="horizontal"
        android:padding="@dimen/_5dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_35dp"
            android:layout_marginRight="@dimen/_3dp"
            android:layout_weight="1"
            android:background="@drawable/white_rounded_withboundary">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textColor="@color/red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="@string/delete"
                    android:textColor="@color/red" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_35dp"
            android:layout_marginLeft="@dimen/_3dp"
            android:layout_weight="1"
            android:background="@drawable/white_rounded_withboundary"
            android:gravity="center"
            android:text="@string/edit"
            android:textColor="@color/blue" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/waiting_lay"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="@dimen/_30dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@drawable/white_rounded"
        android:backgroundTint="@color/alpha_blue_1"
        android:paddingEnd="@dimen/_30dp">

        <RelativeLayout
            android:id="@+id/clock_pic"
            android:layout_width="@dimen/_25dp"
            android:layout_height="@dimen/_25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10dp"
            android:background="@drawable/circle_lay"
            android:backgroundTint="@color/white">

            <ImageView
                android:layout_width="@dimen/_20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_clock" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_30dp"
            android:layout_toRightOf="@+id/clock_pic"
            android:fontFamily="@font/inter_bold"
            android:text="@string/waiting_for_verification"
            android:textColor="@color/blue"
            android:textSize="@dimen/_14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@color/grey_3"
        android:layout_marginTop="@dimen/_15dp" />
</LinearLayout>