<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white_1"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardUseCompatPadding="true"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardElevation="3dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/blue_2">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_250dp"
                                android:background="@drawable/blue_curve">

                                <ImageView
                                    android:id="@+id/prof_img"
                                    android:layout_width="@dimen/_70dp"
                                    android:layout_height="@dimen/_70dp"
                                    android:layout_marginStart="@dimen/_5dp"
                                    android:layout_marginTop="@dimen/_5dp"
                                    android:src="@drawable/prof" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5dp"
                                    android:layout_marginTop="@dimen/_15dp"
                                    android:layout_toRightOf="@+id/prof_img"
                                    android:fontFamily="@font/inter_bold"
                                    android:text="Ms. Karishma\nCoulson"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginStart="@dimen/_15dp"
                                    android:layout_marginTop="@dimen/_15dp"
                                    android:layout_marginEnd="@dimen/_15dp"
                                    android:layout_marginBottom="@dimen/_15dp"
                                    android:background="@drawable/white_rounded"
                                    android:fontFamily="@font/inter_bold"
                                    android:paddingHorizontal="@dimen/_10dp"
                                    android:paddingVertical="@dimen/_5dp"
                                    android:text="@string/add_plus"
                                    android:textColor="@color/blue_2" />

                                <View
                                    android:id="@+id/view1"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_below="@+id/prof_img"
                                    android:layout_marginTop="@dimen/_5dp"
                                    android:background="#26FFFFFF" />

                                <RelativeLayout
                                    android:id="@+id/loc_lay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/view1"
                                    android:layout_marginTop="@dimen/_10dp">

                                    <ImageView
                                        android:id="@+id/full_address_icon"
                                        android:layout_width="@dimen/_16dp"
                                        android:layout_height="@dimen/_16dp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/_10dp"
                                        android:layout_marginLeft="@dimen/_5dp"
                                        android:src="@drawable/ic_marker"
                                        app:tint="@color/white" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_10dp"
                                        android:layout_toEndOf="@+id/full_address_icon"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/full_address_txt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_5dp"
                                            android:fontFamily="@font/inter"
                                            android:gravity="center_vertical"
                                            android:text="1290 9th Ave, San Francisco"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_14sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_5dp"
                                            android:fontFamily="@font/inter"
                                            android:gravity="center_vertical"
                                            android:text="CA 94122, United States"
                                            android:textColor="@color/hintColor"
                                            android:textSize="@dimen/_14sp" />
                                    </LinearLayout>


                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/email_lay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/loc_lay"
                                    android:layout_marginTop="@dimen/_10dp">

                                    <ImageView
                                        android:id="@+id/email_icon"
                                        android:layout_width="@dimen/_16dp"
                                        android:layout_height="@dimen/_16dp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/_10dp"
                                        android:layout_marginLeft="@dimen/_5dp"
                                        android:src="@drawable/white_email" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_10dp"
                                        android:layout_toEndOf="@+id/email_icon"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/your_email"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_5dp"
                                            android:fontFamily="@font/inter"
                                            android:gravity="center_vertical"
                                            android:text="mskarishmacoul@gmail.com"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_14sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_5dp"
                                            android:fontFamily="@font/inter"
                                            android:gravity="center_vertical"
                                            android:text="@string/primary_email"
                                            android:textColor="@color/hintColor"
                                            android:textSize="@dimen/_14sp" />
                                    </LinearLayout>


                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/phone_lay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/email_lay"
                                    android:layout_marginTop="@dimen/_10dp">

                                    <ImageView
                                        android:id="@+id/phone_icon"
                                        android:layout_width="@dimen/_16dp"
                                        android:layout_height="@dimen/_16dp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="@dimen/_10dp"
                                        android:layout_marginLeft="@dimen/_5dp"
                                        android:src="@drawable/white_email" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_10dp"
                                        android:layout_toEndOf="@+id/phone_icon"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/your_phone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_5dp"
                                            android:fontFamily="@font/inter"
                                            android:gravity="center_vertical"
                                            android:text="+1 415 555 12 12"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_14sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_5dp"
                                            android:fontFamily="@font/inter"
                                            android:gravity="center_vertical"
                                            android:text="@string/primary_phone"
                                            android:textColor="@color/hintColor"
                                            android:textSize="@dimen/_14sp" />
                                    </LinearLayout>


                                </RelativeLayout>

                            </RelativeLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="Progress: 45%"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp" />

                    <ProgressBar
                        style="@style/Widget.ProgressBar.Vertical"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10dp"
                        android:layout_marginRight="@dimen/_10dp"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:progress="45" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ic_carr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:src="@drawable/career"
                        app:tint="@color/grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginEnd="@dimen/_5dp"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_toRightOf="@+id/ic_carr"
                        android:fontFamily="@font/inter_bold"
                        android:text="@string/experiences"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp" />

                    <TextView
                        android:id="@+id/add_exp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:background="@drawable/white_rounded_withboundary"
                        android:fontFamily="@font/inter_bold"
                        android:paddingHorizontal="@dimen/_10dp"
                        android:paddingVertical="@dimen/_5dp"
                        android:text="@string/add_plus"
                        android:textColor="@color/blue" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/add_exp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:background="@color/grey_3" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/experience_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view2"
                        android:layout_margin="@dimen/_5dp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ic_edu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:src="@drawable/ic_cap"
                        app:tint="@color/grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginEnd="@dimen/_5dp"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_toRightOf="@+id/ic_edu"
                        android:fontFamily="@font/inter_bold"
                        android:text="@string/education"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp" />

                    <TextView
                        android:id="@+id/add_edu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:background="@drawable/white_rounded_withboundary"
                        android:fontFamily="@font/inter_bold"
                        android:paddingHorizontal="@dimen/_10dp"
                        android:paddingVertical="@dimen/_5dp"
                        android:text="@string/add_plus"
                        android:textColor="@color/blue" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/add_edu"
                        android:layout_marginTop="@dimen/_10dp"
                        android:background="@color/grey_3" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/edu_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view3"
                        android:layout_margin="@dimen/_5dp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/add_edu"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/grey_3" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/int_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginEnd="@dimen/_5dp"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="@string/top_interest"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp" />

                    <ImageView
                        android:id="@+id/add_inter"
                        android:layout_width="@dimen/_20dp"
                        android:layout_height="@dimen/_20dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:src="@drawable/ic_edit"
                        android:text="@string/add_plus"
                        android:textColor="@color/blue" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/int_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/add_inter"
                        android:layout_margin="@dimen/_5dp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/uni_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginEnd="@dimen/_5dp"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="@string/top_university"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/uni_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/uni_text"
                        android:layout_margin="@dimen/_5dp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/add_edu"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/grey_3" />

            <TextView
                android:id="@+id/journal_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/journals"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/journal_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_inter"
                android:layout_margin="@dimen/_10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/add_edu"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/grey_3" />

            <TextView
                android:id="@+id/galleries_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_5dp"
                android:layout_marginBottom="@dimen/_5dp"
                android:fontFamily="@font/inter_bold"
                android:text="@string/galleries"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/img_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:layout_marginEnd="@dimen/_5dp"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="@string/playing_football"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/img_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/img_text"
                        android:layout_margin="@dimen/_5dp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>