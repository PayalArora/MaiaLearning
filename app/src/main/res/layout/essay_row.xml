<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10dp"
    android:layout_marginVertical="@dimen/_7dp"
    android:background="@drawable/white_rect"
    android:paddingBottom="@dimen/_10dp">

    <TextView
        android:id="@+id/text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/_10dp"
        android:drawableStart="@drawable/draft"
        android:drawablePadding="@dimen/_5dp"
        android:fontFamily="@font/inter_bold"
        android:paddingStart="@dimen/_10dp"
        android:text="Draft"
        android:textColor="@color/red_1"
        android:textSize="@dimen/_12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_15dp"
        android:layout_marginVertical="@dimen/_10dp"
        android:drawablePadding="@dimen/_15dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/uc_pq"
        android:textSize="@dimen/_12sp"
        android:textColor="@color/univ_name"
        app:layout_constraintStart_toEndOf="@+id/text_type"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/text_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_15dp"
        android:layout_marginVertical="@dimen/_10dp"
        android:drawablePadding="@dimen/_15dp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/blue"
        android:text="@string/words_700"
        android:textSize="@dimen/_12sp"
        app:layout_constraintStart_toEndOf="@+id/text_title"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:layout_width="@dimen/_10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_marginRight="@dimen/_15dp"
        android:background="@android:color/transparent"
        android:src="@drawable/menu_dots"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_15dp"
        android:layout_marginVertical="@dimen/_10dp"
        android:drawablePadding="@dimen/_15dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/headline_essay"
        android:textColor="@color/univ_name"
        android:textSize="@dimen/_14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15dp"
        android:layout_marginTop="@dimen/_5dp"
        android:lineSpacingExtra="@dimen/_2sp"
        android:text="Please complete your resume and make sure it is in your Google folder for me to review."
        android:textColor="@color/univ_name"
        android:fontFamily="@font/inter"
        android:textSize="@dimen/_14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_headline" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_05dp"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@color/grey_1"
        app:layout_constraintTop_toBottomOf="@+id/text_description" />

    <TextView
        android:id="@+id/text_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_15dp"
        android:layout_marginVertical="@dimen/_10dp"
        android:drawablePadding="@dimen/_15dp"

        android:text="@string/review_by"
        android:textColor="@color/black_4"
        android:textSize="@dimen/_12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />



    <ImageView
        android:id="@+id/rb_other_app"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30dp"
        android:layout_gravity="start"
        android:layout_marginVertical="@dimen/_10dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/ic_common_app"
        android:layoutDirection="rtl"
        android:paddingStart="@dimen/_10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>